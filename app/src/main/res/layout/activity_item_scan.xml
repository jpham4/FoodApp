<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.man78.foodapp.ItemScan">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="28dp"
        android:text="Scaned Item"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="283dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:text="Milk"
        app:layout_constraintBottom_toTopOf="@+id/AddToPantryButton"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:textSize="18sp" />

    <Button
        android:id="@+id/AddToPantryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="Add to pantry"
        app:layout_constraintBottom_toTopOf="@+id/ScanAgainButton"
        app:layout_constraintEnd_toEndOf="@+id/ScanAgainButton"
        app:layout_constraintStart_toStartOf="@+id/ScanAgainButton"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/ScanAgainButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:text="Scan Again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/AddToPantryButton" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="181dp"
        android:layout_height="0dp"
        android:layout_marginBottom="41dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="56dp"
        android:text="Camera Goes here"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textSize="18sp" />
</android.support.constraint.ConstraintLayout>
